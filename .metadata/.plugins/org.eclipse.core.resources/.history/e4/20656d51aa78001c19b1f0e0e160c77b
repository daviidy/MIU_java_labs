import java.util.*;

public class Package {
	private String description;
	private double weight;
	private String zone;
	List<Carrier> carriers;
	
	public Package(String description, double weight, String zone, List<Carrier> carriers) {
		this.description = description;
		this.weight = weight;
		this.zone = zone;
		this.carriers = carriers;
	}
	
	
	
	public String getDescription() {
		return description;
	}



	public void setDescription(String description) {
		this.description = description;
	}



	public double getWeight() {
		return weight;
	}



	public void setWeight(double weight) {
		this.weight = weight;
	}



	public String getZone() {
		return zone;
	}



	public void setZone(String zone) {
		this.zone = zone;
	}



	void addCarrier(Carrier car) {
		carriers.add(car);
	}
	
	void minPrice() {
		double res = 0;
		for(Carrier c: carriers) {
			if (c.calcPrice() < res) {
				res = c.calcPrice();
			}
		}
		System.out.printf("%s\t%.2f\t%s", description, res, c.name);
	}

}
