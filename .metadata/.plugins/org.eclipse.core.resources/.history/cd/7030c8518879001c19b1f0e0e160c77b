import java.util.List;

public class Commissioned extends Employee {
	
	private int commission;
	private double baseSalary;
	private List<Order> orders;
	
	public Commissioned(int empId, int commission, int baseSalary, List<Order> orders) {
		super(empId);
		this.commission = commission;
		this.baseSalary = baseSalary;
		this.orders = orders;
		// TODO Auto-generated constructor stub
	}
	
	@Override
	double calcGrossPay(DateRange date) {
		double res = baseSalary;
		for(Order ord: orders) {
			if(date.isInRange(ord.getOrderDate())) {
				double gain = ord.getOrderAmount() * 0.07;
				res += ord.getOrderAmount()
			}
		}
	}

	public int getCommission() {
		return commission;
	}

	public double getBaseSalary() {
		return baseSalary;
	}
	
	void addOrder(Order ord) {
		orders.add(ord);
	}
	
}
