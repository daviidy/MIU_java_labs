
public class Zone {
	private String name;
	private double rate;
	
	public Zone(String name, double rate) {
		this.name = name;
		this.rate = rate;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getRate() {
		return rate;
	}

	public void setRate(double rate) {
		this.rate = rate;
	}
	
	void calcRate() {
		switch (name){
			case "IA":
			case "OR":
			case "CA":
			case "MT": {
				
				this.setRate(0.35);
			}
			case "TX":
			case "UT": {
				this.setRate(0.3);
			}
			case "FL":
			case "MA":
			case "OH": {
				this.setRate(0.55);
			}
			default:
				this.setRate(0.43);
		}
	}
	
}
