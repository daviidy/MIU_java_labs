import java.util.*;

public class Package {
	private String description;
	private double weight;
	private String zone;
	List<ICarrier> carriers;
	private Zone zone;
	
	public Package(String description, double weight, String zone, List<ICarrier> carriers) {
		this.description = description;
		this.weight = weight;
		this.zone = zone;
		this.carriers = carriers;
	}
	
	
	
	public String getDescription() {
		return description;
	}



	public void setDescription(String description) {
		this.description = description;
	}



	public double getWeight() {
		return weight;
	}



	public void setWeight(double weight) {
		this.weight = weight;
	}



	public String getZone() {
		return zone;
	}



	public void setZone(String zone) {
		this.zone = zone;
	}



	void addCarrier(Carrier car) {
		carriers.add(car);
	}
	
	void minPrice() {
		double res = 0;
		String name = "";
		for(ICarrier c: carriers) {
			if (c.calcPrice(this) < res) {
				res = c.calcPrice(this);
				name = c.getName();
			}
		}
		System.out.printf("%s\t%.2f\t%s", description, res, name);
	}

}
